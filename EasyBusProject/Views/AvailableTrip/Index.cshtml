@model IEnumerable<EasyBus.Models.Trip>

@{
    ViewData["Title"] = "Index";
    string myStringData = ViewData["day"] as string;
}

<style>
    .item {
        border: 2px solid darkgrey;
        border-radius: 10px;
        padding: 15px;
        background-color: #f0f0f0;
    }
    h1 {
        font-family: "Oswald", sans-serif;
    }
    .buss{
       /*  color:#FEC91B; */
        size:14px;
    }
</style>
 <link rel="stylesheet" href="~/assets/fontawseme/fonts/css/fontawesome.min.css" asp-append-version="true" />
 <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"  crossorigin="anonymous">


 

<div class="container">
    <h1 class="mt-4 mb-4">Trips Available On @ViewBag.Date</h1>
    @foreach (var item in Model)
    {
        <div class="row item mb-4">
                <div class="col-4">

                    <h2>@Html.DisplayFor(modelItem => item.PickUp.Name) <i class="fa-solid fa-van-shuttle buss"></i>  @Html.DisplayFor(modelItem => item.DropOff.Name)</h2>

                    <p style="color:green;font-weight:bolder">$@Html.DisplayFor(modelItem => item.Price)</p>

                </div>


                <div class="col-2">

                    <p>@ViewBag.Date <br /> @Html.DisplayFor(modelItem => item.Time)<br />Duration: @Html.DisplayFor(modelItem => item.Duration)hr</p>
                </div>

                <div class="col-2">
                <svg style="margin-left:20px;margin-bottom:10px;margin-top:5px" class="bi bi-bus-front-fill" xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" viewBox="0 0 16 16">
                    <path d="M16 7a1 1 0 0 1-1 1v3.5c0 .818-.393 1.544-1 2v2a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5V14H5v1.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-2a2.5 2.5 0 0 1-1-2V8a1 1 0 0 1-1-1V5a1 1 0 0 1 1-1V2.64C1 1.452 1.845.408 3.064.268A44 44 0 0 1 8 0c2.1 0 3.792.136 4.936.268C14.155.408 15 1.452 15 2.64V4a1 1 0 0 1 1 1zM3.552 3.22A43 43 0 0 1 8 3c1.837 0 3.353.107 4.448.22a.5.5 0 0 0 .104-.994A44 44 0 0 0 8 2c-1.876 0-3.426.109-4.552.226a.5.5 0 1 0 .104.994M8 4c-1.876 0-3.426.109-4.552.226A.5.5 0 0 0 3 4.723v3.554a.5.5 0 0 0 .448.497C4.574 8.891 6.124 9 8 9s3.426-.109 4.552-.226A.5.5 0 0 0 13 8.277V4.723a.5.5 0 0 0-.448-.497A44 44 0 0 0 8 4m-3 7a1 1 0 1 0-2 0 1 1 0 0 0 2 0m8 0a1 1 0 1 0-2 0 1 1 0 0 0 2 0m-7 0a1 1 0 0 0 1 1h2a1 1 0 1 0 0-2H7a1 1 0 0 0-1 1" />
                </svg>
                <p>
                    @Html.DisplayFor(modelItem => item.Bus.Model)
                    <br /> Class: @Html.DisplayFor(modelItem => item.Bus.Category)

                </p>
                </div>

                <div class="col-4 text-end">
                    <a style="margin-top:10px" class="btn btn-warning tickets" asp-action="DetailsOfTrip" asp-route-id="@item.Id" asp-route-date="@ViewBag.Date"><h4>Buy Ticket</h4></a>
                </div>
        </div>
    }
</div>
